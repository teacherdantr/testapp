generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Uses the DATABASE_URL from your .env file
}

// Example Test model - you'll expand this
model Test {
  id          String   @id @default(cuid())
  title       String
  description String?
  password    String?  // For password-protected tests
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation to Questions (example)
